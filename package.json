    "start": "NODE_ENV=production node index.js",
    "build": "webpack --mode=production",
    "lint": "eslint .",
    "test:client": "NODE_ENV=test jest --verbose --runInBand ./client",
    "test:server": "NODE_ENV=test jest --verbose --runInBand ./server",
    "start:test": "NODE_ENV=test node index.js"
  },
  "engines": {
    "node": ">=10.15"
  },
  "author": "",
  "license": "ISC",
